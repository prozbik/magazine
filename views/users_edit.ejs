<div class="box box-info">
  <div class="box-header with-border">
    <h3 class="box-title">Редактирование пользователя</h3>
  </div>
  <!-- /.box-header -->
  <!-- form start -->
  <% if(users) { %>
  <form class="form-horizontal" action="/admin/users/save" method="post">
    <div class="box-body">
      <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Имя</label>
        <div class="col-sm-10">
          <input type="hidden" name="id" value="<%= users._id %>">
          <input type="text" class="form-control" id="inputEmail3" placeholder="Name" name="user_name" value="<%= users.name %>">
        </div>
      </div>
      <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
          <input type="email" class="form-control" id="inputEmail3" placeholder="Email" name="user_email" value="<%= users.email %>">
        </div>
      </div>
    </div>
    <!-- /.box-body -->
    <div class="box-footer">
      <button type="submit" class="btn btn-default">Отмена</button>
      <button type="submit" class="btn btn-info pull-right">Сохранить</button>
    </div>
    <!-- /.box-footer -->
  </form>
  <% } %>
</div>
